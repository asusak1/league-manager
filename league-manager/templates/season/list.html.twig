{% extends 'base.html.twig' %}

{% block title %}Seasons{% endblock %}

{% block body %}
    <h1 class="text-center mb-5 mt-3 font-weight-bold">Seasons for {{ competition }}</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Season</th>
            <th scope="col">Start date</th>
            <th scope="col">End date</th>
            <th scope="col">Standings</th>
        </tr>
        </thead>
        <tbody>
        {% set index = 0 %}
        {% for season in seasons %}
            <tr>
                <th scope="row">{{ season.id }}</th>
                <td>{{ season.name }}</td>
                <td>{{ season.startDate|date('d.m.Y') }}</td>
                <td>{{ season.endDate|date('d.m.Y') }}</td>
                <td>
                    <a href="{{ links[index] }}">show</a>
                </td>
            </tr>
            {% set index = index + 1 %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

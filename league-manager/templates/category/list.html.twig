{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1 class="text-center mb-5 mt-3 font-weight-bold">Categories for {{ sport }}</h1>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Category</th>
            <th scope="col">Competitions</th>
        </tr>
        </thead>
        <tbody>
        {% set index = 0 %}
        {% for category in categories %}
            <tr>
                <th scope="row">{{ category.id }}</th>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ links[index] }}">show</a>
                </td>
            </tr>
            {% set index = index + 1 %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Competitions{% endblock %}

{% block body %}
    <h1 class="text-center mb-5 mt-3 font-weight-bold">Competitions for {{ category }}</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Category</th>
                <th scope="col">Matches against</th>
                <th scope="col">Seasons</th>
            </tr>
            </thead>
            <tbody>
            {% set index = 0 %}
            {% for competition in competitions%}
                <tr>
                    <th scope="row">{{ competition.id }}</th>
                    <td>{{ competition.name }}</td>
                    <td>{{ competition.matchesAgainst }}</td>
                    <td>
                        <a href="{{ links[index] }}">show</a>
                    </td>
                </tr>
                {% set index = index + 1 %}
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
